<?xml version="1.0" encoding="utf-8" ?>

<Patch>

<!--Patch beer, logs and knives to add an extra weapon tag-->

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="Beer"]</xpath>
		<value>
			<weaponTags>
			  <li>HooliganWeapon</li>
			</weaponTags>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="WoodLog"]</xpath>
		<value>
			<weaponTags>
			  <li>HooliganWeapon</li>
			</weaponTags>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="MeleeWeapon_Knife"]/weaponTags</xpath>
		<value>
			  <li>HooliganVeteranWeapon</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="Weapon_GrenadeMolotov"]/weaponTags</xpath>
		<value>
			  <li>HooliganVeteranWeapon</li>
		</value>
	</Operation>

</Patch>