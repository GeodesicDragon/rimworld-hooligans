<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef ParentName="FactionBase">
    <defName>Geo_HooliganFaction</defName>
    <label>hooligans</label>
    <categoryTag>Outlander</categoryTag>
    <description>What are you looking at?</description>
    <pawnSingular>hooligan</pawnSingular>
    <pawnsPlural>hooligans</pawnsPlural>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxCountAtGameStart>1</maxCountAtGameStart>
    <canSiege>false</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>head honcho</leaderTitle>
    <leaderForceGenerateNewPawn>true</leaderForceGenerateNewPawn>
    <factionIconPath>World/WorldObjects/Expanding/TownRough</factionIconPath>
	<playerInitialSettlementNameMaker>NamerInitialSettlementColony</playerInitialSettlementNameMaker>
    <fixedName>The Drunken Horde</fixedName>
    <settlementNameMaker>NamerSettlementPirate</settlementNameMaker>
	<permanentEnemyToEveryoneExcept></permanentEnemyToEveryoneExcept>
    <allowedCultures>
		<li>Corunan</li>
		<li>Rustican</li>
	</allowedCultures>
    <requiredMemes>
		<li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
		<li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
    </requiredMemes>
    <disallowedMemes>
	
    </disallowedMemes>
    <disallowedPrecepts>

    </disallowedPrecepts>
    <structureMemeWeights>
      <Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Ideological>
    </structureMemeWeights>
    <techLevel>Industrial</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>Outlander</li>
          <li>Outsider</li>
          <li>Pirate</li>
        </categories>
      </li>
    </backstoryFilters>
    <geneticVariance>0.8</geneticVariance>
    <apparelStuffFilter>
      <stuffCategoriesToAllow>
        <li>Metallic</li>
        <li>Fabric</li>
      </stuffCategoriesToAllow>
    </apparelStuffFilter>
    <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
    <colorSpectrum>
      <li>(1, 0, 0)</li>
    </colorSpectrum>
    <fixedLeaderKinds>
      <li>Hooligan_Leader</li>
    </fixedLeaderKinds>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(0, 1)</li>
      </points>
    </raidCommonalityFromPointsCurve>
    <raidLootMaker>Geo_HooliganLoot</raidLootMaker>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(500, 100)</li>
        <li>(1000, 150)</li>
        <li>(2000, 250)</li>
        <li>(2001, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>        
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <Hooligan_Default>35</Hooligan_Default>
        </options>
      </li>
      <li>        
        <kindDef>Combat</kindDef>
        <commonality>50</commonality>
        <options>
          <Hooligan_Default>20</Hooligan_Default>
		  <Hooligan_Veteran>15</Hooligan_Veteran>
        </options>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <Hooligan_Default>30</Hooligan_Default>
          <Hooligan_Veteran>20</Hooligan_Veteran>
		</options>
      </li>
    </pawnGroupMakers>
    <maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
    <configurationListOrderPriority>70</configurationListOrderPriority>
  </FactionDef>

  <ThingSetMakerDef>
    <defName>Geo_HooliganLoot</defName>
    <root Class="ThingSetMaker_MarketValue">
      <fixedParams>
        <filter>
          <thingDefs>
            <li>Beer</li>
			<li>Silver</li>
          </thingDefs>
		  <categories>
			<li>Drugs</li>
		  </categories>
        </filter>
      </fixedParams>
    </root>
  </ThingSetMakerDef>
</Defs>